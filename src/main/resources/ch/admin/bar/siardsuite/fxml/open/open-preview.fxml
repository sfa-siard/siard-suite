<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContentDisplay?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Pane?>
<?import ch.admin.bar.siardsuite.component.IconButton?>
<AnchorPane styleClass="root-center" stylesheets="@../../css/root.css" xmlns="http://javafx.com/javafx/1.8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.admin.bar.siardsuite.presenter.open.OpenPreviewPresenter">
    <ScrollPane fitToHeight="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                styleClass="scrollable-pane" AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="110.0"
                AnchorPane.rightAnchor="110.0" AnchorPane.topAnchor="40.0">
        <BorderPane fx:id="borderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                    styleClass="main-container">
            <center>
                <VBox fx:id="container" maxHeight="1.7976931348623157E308" BorderPane.alignment="TOP_LEFT">
                    <children>
                        <VBox>
                            <children>
                                <Label fx:id="title" styleClass="h2"/>
                                <Text fx:id="text" styleClass="view-text">
                                    <VBox.margin>
                                        <Insets bottom="24.0" top="15.0"/>
                                    </VBox.margin>
                                </Text>
                            </children>
                            <VBox.margin>
                                <Insets left="25.0" right="25.0"/>
                            </VBox.margin>
                        </VBox>
                        <HBox VBox.vgrow="ALWAYS">
                            <children>
                                <!-- tree on the left side -->
                                <VBox fx:id="leftTreeBox" prefWidth="365.0" HBox.hgrow="SOMETIMES">
                                    <children>
                                        <TreeView fx:id="treeView" maxHeight="1.7976931348623157E308"
                                                  VBox.vgrow="ALWAYS"/>
                                    </children>
                                </VBox>
                                <StackPane fx:id="rightTableBox" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">

                                    <!-- content -->
                                    <ScrollPane fitToHeight="true"
                                                fitToWidth="true"
                                                maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308"
                                                styleClass="table-container"
                                                StackPane.alignment="CENTER_LEFT">
                                        <content>
                                            <AnchorPane fx:id="contentPane"
                                                        maxHeight="1.7976931348623157E308"
                                                        maxWidth="1.7976931348623157E308"/>
                                        </content>
                                        <StackPane.margin>
                                            <Insets top="69.0"/>
                                        </StackPane.margin>
                                    </ScrollPane>

                                    <!-- title and search field -->
                                    <HBox alignment="TOP_RIGHT"
                                          maxHeight="-Infinity"
                                          styleClass="table-container-header"
                                          StackPane.alignment="TOP_RIGHT">
                                        <children>
                                            <HBox HBox.hgrow="ALWAYS">
                                                <children>
                                                    <Label fx:id="titleTableContainer"
                                                           maxHeight="42.0"
                                                           alignment="CENTER_LEFT">
                                                        <styleClass>
                                                            <String fx:value="h4"/>
                                                            <String fx:value="table-container-title"/>
                                                        </styleClass>
                                                    </Label>
                                                    <IconButton fx:id="saveChangesButton"
                                                                icon="DOWNLOAD"
                                                                visible="false">
                                                    </IconButton>
                                                    <IconButton fx:id="dropChangesButton"
                                                                icon="LEFT_ARROW"
                                                                visible="false">
                                                    </IconButton>
                                                </children>
                                            </HBox>

                                            <MFXButton fx:id="tableSearchButton" alignment="CENTER_RIGHT"
                                                       rippleAnimateBackground="false">
                                                <styleClass>
                                                    <String fx:value="search-icon"/>
                                                    <String fx:value="icon-text-button"/>
                                                </styleClass>
                                            </MFXButton>
                                            <MFXButton fx:id="metaSearchButton" alignment="CENTER_RIGHT"
                                                       rippleAnimateBackground="false">
                                                <styleClass>
                                                    <String fx:value="search-icon"/>
                                                    <String fx:value="icon-text-button"/>
                                                </styleClass>
                                            </MFXButton>
                                        </children>
                                    </HBox>
                                    <HBox.margin>
                                        <Insets left="20.0"/>
                                    </HBox.margin>
                                </StackPane>
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                    <BorderPane.margin>
                        <Insets left="25.0" right="25.0" top="48.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <bottom>
            </bottom>
            <bottom>
            </bottom>
        </BorderPane>
    </ScrollPane>
</AnchorPane>
