<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import java.lang.String?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="rootPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="850.0"
            prefWidth="1440.0" styleClass="root" stylesheets="@../css/root.css" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.admin.bar.siardsuite.presenter.RootPresenter">
    <top>
        <HBox fx:id="windowHeader" alignment="CENTER" minWidth="-Infinity" styleClass="header"
              BorderPane.alignment="CENTER">
            <Label styleClass="header-app-label" text="SIARD Suite" HBox.hgrow="ALWAYS"/>
            <MFXButton fx:id="openDoc" alignment="CENTER" rippleAnimateBackground="false">
                <styleClass>
                    <String fx:value="help-icon"/>
                    <String fx:value="icon-button"/>
                </styleClass>
            </MFXButton>
            <MenuBar fx:id="menuBar" styleClass="menu-bar">
                <menus>
                    <Menu fx:id="menuContainer" mnemonicParsing="false" styleClass="menu-button">
                        <items>
                            <Menu fx:id="menuItemLanguage" styleClass="sub-menu" mnemonicParsing="false">
                            </Menu>
                            <MenuItem fx:id="menuItemOptions" mnemonicParsing="false"/>
                            <MenuItem fx:id="menuItemInfo" mnemonicParsing="false"/>
                            <MenuItem fx:id="menuItemClose" mnemonicParsing="false"/>
                        </items>
                    </Menu>
                </menus>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </MenuBar>
        </HBox>
    </top>
    <center>
    </center>
</BorderPane>
