<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="rootPane" prefHeight="720.0" prefWidth="1280.0" styleClass="rootPane" stylesheets="@../css/root.css"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.admin.bar.siardsuite.presenter.RootPresenter">

    <HBox alignment="CENTER_LEFT" layoutY="6.0" styleClass="header-left"
          spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label styleClass="header-app-label" text="SIARD Suite"/>
    </HBox>

    <HBox alignment="CENTER_RIGHT" layoutY="6.0"  styleClass="header-right"
          spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label  styleClass="header-help-label" text="Help"/>
        <Label  styleClass="header-menu-label" text="Menu"/>
    </HBox>

    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" styleClass="box" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" spacing="25.0">
            <Text fx:id="welcomeText"/>
            <Button fx:id="buttonGerman" />
            <Button fx:id="buttonEnglish" />

        </HBox>
    </VBox>
</AnchorPane>
